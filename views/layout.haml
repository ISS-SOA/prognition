!!! 5
%html{:lang => 'en'}
  %head
    %title Prognition

    -# CSS, JS, and settings For Bootstrap:
    -# note: switched from Google CDN to jquery CDN
    %meta{:charset => 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %link{rel:'stylesheet', href:'//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'}
    %script{src:'//code.jquery.com/jquery-1.11.2.min.js'}
    %script{src:'//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'}

    -# Custom CSS:
    %link{rel:'stylesheet', href:'/custom.css'}
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-62279481-1', 'auto');
      ga('send', 'pageview');

  %body
    %div{class:'container', id:'html_body'}
      %div{id:'header', class:'jumbotron'}
        %img{class: 'img-responsive', src: '/images/prognition_logo_medium.png', alt: 'Prognition: track how you learn coding'}
      %div{id: 'navbar'}
        = haml :nav
        = haml :flash_bar
        %p{style: 'margin-bottom: 1cm'}
      %div{id:'content'}
        = yield
      %div{id:'footer'}
        = haml :footer
